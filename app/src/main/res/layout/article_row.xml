<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/row_space"
    android:layout_marginBottom="@dimen/row_space"
    android:background="@color/cardview_light_background"
    tools:context="com.pof.articles.ui.MainActivity">

    <ImageView
        android:id="@+id/userimage"
        android:layout_width="@dimen/row_height"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@drawable/roundcorner_drawable" />
    
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/userimage"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/articleimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userimage"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/articleimage"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/content"
        android:layout_margin="10dp"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/title"
        android:layout_margin="10dp"
        android:ellipsize="end"/>

</RelativeLayout>